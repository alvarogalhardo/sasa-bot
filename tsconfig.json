{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "target": "ESNext",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "lib": ["esnext"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}